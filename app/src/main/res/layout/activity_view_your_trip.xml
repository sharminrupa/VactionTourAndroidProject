          <TextView
              android:id="@+id/tvid"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="123"/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Name: "/>
        <TextView
            android:id="@+id/vyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sharmin"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Mobile: "/>
        <TextView
            android:id="@+id/vymobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01679628774"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Email: "/>
        <TextView
            android:id="@+id/vyemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rupas1475@gmail.com"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Address: "/>
        <TextView
            android:id="@+id/vyaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dhaka"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Person: "/>
        <TextView
            android:id="@+id/vyperson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 person"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Location: "/>
        <TextView
