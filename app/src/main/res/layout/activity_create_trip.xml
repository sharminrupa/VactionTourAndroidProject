<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TripBookActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Create A trip"
        android:textFontWeight="600"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="5"
            android:text="Location: "/>

        <EditText
            android:id="@+id/clocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="13"
            android:paddingLeft="10dp"
            android:hint="Location name"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="5"
            android:text="Day: "/>

        <EditText
            android:id="@+id/cday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="13"
            android:paddingLeft="10dp"
            android:hint="How many day"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="5"
            android:text="Amount: "/>

        <EditText
            android:id="@+id/camount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="13"
            android:paddingLeft="10dp"
            android:hint="Single person cost"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="5"
            android:text="Recive : "/>

        <EditText
            android:id="@+id/crecive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="13"
            android:paddingLeft="10dp"
            android:hint="Recive address"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="5"
            android:text="Date: "/>



        <EditText
            android:id="@+id/cdate"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
             android:hint="Select Date" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="5"
            android:text="Beck:"/>

        <EditText
            android:id="@+id/cbacktime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="13"
            android:paddingLeft="10dp"
            android:hint="Back Time: "
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="5"
            android:text="Beck:"/>

        <EditText
            android:id="@+id/maxpeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="13"
            android:paddingLeft="10dp"
            android:hint="Maximum people "
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="5"
            android:text="Details:"
            />

        <EditText
            android:id="@+id/cdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="13"
            android:paddingLeft="10dp"
            android:hint="Details trip "
            android:layout_weight="1" />
    </LinearLayout>


  <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="5"
            android:text="Upload:"/>


        <ImageView
            android:id="@+id/imgUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_upload"
            android:paddingLeft="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/Createtrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_bright"
        android:onClick="createTrip"
        android:text="Submit"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/CreateCancel"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Cancel"/>
</LinearLayout>